@using BookManagementSystem.Web.Startup;
@model BookManagementSystem.Models.Forums.ForumListViewModel
@{
    ViewBag.Title = "Forums";
    ViewBag.CurrentPageName = PageNames.Forums;
}

@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/Forums/Index.js" asp-append-version="true"></script>
    </environment>

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>Forums</h1>
            </div>
            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#ForumCreateModal" class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    Create
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-md-6">
                        <!--Use for bulk actions-->
                    </div>
                    <div class="col-md-6">
                        @await Html.PartialAsync("~/Views/Forums/Index.AdvancedSearch.cshtml")
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <ul class="list-group w-100 mt-3" id="ForumList">
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/Forums/_CreateModal.cshtml", Model)

<style>
    #forumList li:hover {
        cursor: pointer;
    }
</style>
