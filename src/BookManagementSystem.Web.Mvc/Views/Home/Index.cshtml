@using BookManagementSystem.Web.Startup
@model BookManagementSystem.Models.EBooks.EBookListViewModel;
@{
    ViewBag.Title = L("HomePage");
    ViewBag.CurrentPageName = PageNames.Home;
}

<div class="row mt-3">
    <div class="col-md-6">
        <!--Use for bulk actions-->
    </div>
    <div class="col-md-6">
        @await Html.PartialAsync("~/Views/Home/Index.AdvancedSearch.cshtml")
    </div>
</div>

<div class="ml-3 mt-3">

    <div class="row">
        @foreach(var item in Model.EBook){
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 500px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.EBookName
                                </h5>
                            </p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <img src="img/Book image.jpg" width="170" />
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">
                                @item.Description
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary" asp-controller="Home" asp-action="EBook" asp-route-id="@item.Id">
                                    View Details
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>