@using BookManagementSystem.Web.Models.Common.Modals;
@{
    Layout = null;
}

<div class="modal fade" id="EBookCreateModal" tabindex="-1" role="dialog" aria-labelledby="EBookCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("Create New EBook"))
            <form name="eBookCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">

                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" role="tab" href="#create-ebook-details">EBook Details</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" role="tab" href="#add-ebook-authors">Authors</a>
                        </li>
                    </ul>

                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="create-ebook-details">
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label" for="ebookname">EBook Name</label>
                                <div class="col-md-9">
                                    <input id="ebookname" type="text" name="EBookName" class="form-control" required maxlength="50" minlength="2">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label" for="description">Description</label>
                                <div class="col-md-9">
                                    <input id="description" type="text" name="Description" class="form-control" required minlength="2">
                                </div>
                            </div>
                            <div class="row required">
                                <label class="col-md-3 col-form-label" for="file">File</label>
                                <div class="col-md-9 row">
                                    <input id="file" type="file" name="FilePath" required>
                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane container" id="add-ebook-authors">
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label" for="author-details">Author Name</label>
                                <div class="col-md-9">
                                    <select class="form-control" id="author-details" name="AuthorId" required>
                                        <option value="">-- Select Author Name --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>